{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "files": {
    "includes": ["**", "!**/.next/", "!**/node_modules/"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "bracketSpacing": true,
      "arrowParentheses": "always",
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5"
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noUnusedImports": {
          "level": "warn",
          "fix": "none",
          "options": {}
        }
      },
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "complexity": {
        "noUselessFragments": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "info",
          "fix": "safe",
          "options": {}
        }
      }
    }
  }
}
